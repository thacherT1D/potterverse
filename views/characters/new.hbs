<div class="container">
  <h4>Add New Character</h4>

  <div class="row">
    <form class="col s12" action="/characters" method="post">
      <div class="row">
        <div class="input-field col s6">
          <input name="c_first" type="text" class="validate">
          <label>First Name</label>
        </div>
        <div class="input-field col s6">
          <input name="c_last" type="text" class="validate">
          <label>Last Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <select name="c_house">
            <option value="" disabled selected>Select House</option>
            <option value="Gryffindor">Gryffindor</option>
            <option value="Hufflepuff">Hufflepuff</option>
            <option value="Ravenclaw">Ravenclaw</option>
            <option value="Slytherin">Slytherin</option>
            <option value="Unknown">Unknown</option>
            <option value="Did Not Attend Hogwarts">Did Not Attend Hogwarts</option>
          </select>
          <label>Hogwarts House</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <textarea name="c_desc" class="materialize-textarea"></textarea>
          <label>Description</label>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <button type="submit" name="button">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>
