<div class="container">
  <h4>Update Character Details</h4>
  <div class="row">
    {{#each character}}
    <form class="col s12" action='/characters/{{c_id}}/update?_method=put' method="post">
      <div class="row">
        <div class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <input name="c_first" type="text" value='{{c_first}}'>
              <label>First Name</label>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <input name="c_last" type="text" value='{{c_last}}'>
              <label>Last Name</label>
            </div>
          </div>
        </div>
      </div>
      <!-- <div class="row">
        <div class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <input type="text" value='{{c_house}}'>
              <label>House</label>
            </div>
          </div>
        </div>
      </div> -->
      <div class="row">
        <div class="input-field col s12">
          <select name="c_house" type="select" value='{{c_house}}'>
            <option value="">Select House</option>
            <option value="Gryffindor">Gryffindor</option>
            <option value="Hufflepuff">Hufflepuff</option>
            <option value="Ravenclaw">Ravenclaw</option>
            <option value="Slytherin">Slytherin</option>
            <option value="Unknown">Unknown</option>
            <option value="Did Not Attend Hogwarts">Did Not Attend Hogwarts</option>
          </select>
          <label>Hogwarts House</label>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <div class="row">
            <div class="input-field col s6">
              <input name="c_desc" type="text" value='{{c_desc}}'>
              <label>Description</label>
            </div>
          </div>
        </div>
      </div>
      <button type="submit">Submit</button>
    </form>
    {{/each}}
  </div>
</div>
